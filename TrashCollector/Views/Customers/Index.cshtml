@model IEnumerable<TrashCollector.Models.Customers>

@{
    ViewBag.Title = "Index";
}

@using(Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <b>
        Search Option:
    </b>
    @Html.RadioButton("option", "Pickup Day") <text>Pickup Day</text> 
    @Html.TextBox("search") <input type="submit" name="submit" value="Search"/>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtraPickupDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalBill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspensionStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspensionEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickupDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraPickupDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalBill)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuspensionEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
